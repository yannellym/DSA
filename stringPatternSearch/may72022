
function stringPatternSearch(text, pattern) {
  let patternChar = pattern[0];
  let count = 0;
  for(let i = 0; i < text.length; i++) {
    let char = text[i];
    if(char === patternChar){
      let test = text.slice(i, i+pattern.length)
     test === pattern && count ++
    }
  }
  console.log(count)
}
stringPatternSearch("lolol", "lol")